<%include ../partials/header.ejs%>
<div class="row balance-navbar">
    <section class="col-md-4">
        <div class="mn-image text-center">
            <img src="<%=userImage%>" width="50%">
            <h2><%=memberName%></h2>
            <p>Followers: 1</p>
        </div>
        <hr>
    </section>
    <section class="col-md-8">
        <div class="row">
            <div class="col-md-6">
                <div class="text-center">
                    <h3>Their Interests</h3>
                </div>
                <table class="table table-striped" id="member-hobby-list">
                    <tr>
                        <th>Name</th>
                    </tr>
                    <%theirHobbies.forEach(function(hobby){ %>
                    <tr>
                        <td>
                            <a href="/h/<%=hobby.name%>"><%=hobby.name%></a>
                        </td>
                    </tr>
                    <%})%>

                </table>
            </div>
            <div class="col-md-6">
                <div class="text-center">
                    <h3>Your Interests</h3>
                </div>
                <table class="table table-striped" id="member-hobby-list">
                    <tr>
                        <th>Name</th>
                    </tr>
                    <%myHobbies.forEach(function(hobby){ %>
                    <tr>
                        <td>
                            <a href="/h/<%=hobby.name%>"><%=hobby.name%></a>
                        </td>
                    </tr>
                    <%})%>

                </table>
            </div>
        </div>

    </section>
</div>

<%include ../partials/footer.ejs%>