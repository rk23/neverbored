<%include ../partials/header.ejs%>
<div class="balance-navbar">
    <div class="text-center">
        <h2>List of Hobbies</h2>
    </div>
<table class="table table-striped" id="hobby-list">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Cost</th>
        <th>Time Commitment</th>
        <th>Solo</th>
        <th>Travel Required</th>
        <th>Followers</th>
        <th>Follow</th>
    </tr>

    <% var i = 1; hobbies.forEach(function(hobby){ %>
    <tr>
        <td>
            <%=i %>
        </td>
        <td>
            <a href="/h/<%=hobby.name%>"><%=hobby.name%></a>
        </td>
        <td>
            Cost
        </td>
        <td>
            <%=hobby.time%>
        </td>
        <td>
            <%if(hobby.solo){ %>
            <img src="/images/person.png" width="10%">
            <%} else {%>
            <img src="/images/people.png" width="10%">
            <%}%>
        </td>
        <td>
            <%if(hobby.transport){ %>
            <img src="/images/car.png" width="10%">
            <%} else {%>
            <img src="/images/house.png" width="10%">
            <%}%>
        </td>
        <td>
            <%=hobby.followers%>
        </td>
        <td>
            <form method="post" action="/h/<%=hobby.name%>/follow">
                <input type="hidden" value="<%=hobby.id%>" name="followID">
                <button type="submit" name="followName" id="feed-follow"
                        value="<%=hobby.name%>">Follow</button>
            </form>
        </td>
    </tr>
    <%i++;})%>
</table>
</div>
<%include ../partials/footer.ejs%>
