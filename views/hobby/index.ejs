<%include ../partials/header.ejs%>

<div class="balance-navbar">
    <div class="panel panel-default" id="hobby-list">
        <div class="panel-heading">
            <div class="text-center">
                <h2>List of Hobbies</h2>
            </div>
        </div>
        <div class="panel-body">
            <table class="table table-striped">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Cost</th>
                    <th>Time Commitment</th>
                    <th>Solo</th>
                    <th>Travel Required</th>
                    <th>Followers</th>
                    <th>Follow</th>
                </tr>

                <% var i = 1; hobbies.forEach(function(hobby){ %>
                <tr>
                    <td>
                        <%=i %>
                    </td>
                    <td>
                        <a href="/h/<%=hobby.name%>"><%=hobby.name%></a>
                    </td>
                    <td>
                        Cost
                    </td>
                    <td>
                        <%=hobby.time%>
                    </td>
                    <td>
                        <%if(hobby.solo){ %>
                        <img src="/images/person.png" width="60%">
                        <%} else {%>
                        <img src="/images/people.png" width="60%">
                        <%}%>
                    </td>
                    <td>
                        <%if(hobby.transport){ %>
                        <img src="/images/car.png" width="50%">
                        <%} else {%>
                        <img src="/images/house.png" width="50%">
                        <%}%>
                    </td>
                    <td>
                        <%=hobby.followers%>
                    </td>
                    <td>
                        <form method="post" action="/h/<%=hobby.name%>/follow">
                            <input type="hidden" value="<%=hobby.id%>" name="followID">
                            <button type="submit" name="followName" class="btn btn-success" id="feed-follow"
                                    value="<%=hobby.name%>">Follow</button>
                        </form>
                    </td>
                </tr>
                <%i++;})%>
            </table>
        </div>
    </div>

</div>
<%include ../partials/sticky-footer.ejs%>
