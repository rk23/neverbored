<%include ../partials/header.ejs%>
<div class="row">
    <div class="col-md-12">
        <div class="hobby-header">
            <div class="header-overlay">
                <h1><%=fullHobby.name%></h1>
                <%if(fullHobby.solo){ %>
                <img src="/images/person.png" width="3%">
                <%} else {%>
                <img src="/images/people.png" width="3%">
                <%}%>
                <%if(fullHobby.transport){ %>
                <img src="/images/car.png" width="3%">
                <%} else {%>
                <img src="/images/house.png" width="3%">
                <%}%>

                <%if(fullHobby.time % 8 == 0){for(var i = 0; i < fullHobby.time / 8; i++){ %>
                <img src="/images/clock-eight.png" width="3%">
                <%}} else if (fullHobby.time % 4 == 0){for(var i = 0; i < fullHobby.time / 4; i++){ %>
                <img src="/images/clock-four.png" width="3%">
                <%}} else if (fullHobby.time % 1 == 0){for(var i = 0; i < fullHobby.time / 1; i++){ %>
                <img src="/images/clock-one.png" width="3%">
                <%}} else { %>
                <img src="/images/clock-half.png" width="3%">
                <%}%>
                <p><%=fullHobby.short_desc%></p>
            </div>
            <img src="<%=fullHobby.imglink%>" width="100%">
        </div>
    </div>
</div>
<hr>
<div class="row">
    <div class="col-md-12 hobby-stats text-center">
        <div class="col-md-6" id="hobby-gear">
            <table class="table table-striped text-left" >
                <tr>
                    <th></th>
                    <th>Necessary Gear</th>
                    <th></th>
                </tr>
                <tr>
                    <th>Name</th>
                    <th>Cost</th>
                    <%if(currentUser){%>
                    <th></th>
                    <%}%>
                </tr>
                <% var i = 1, total = 0; gear.forEach(function(gear){ total += gear.value%>
                <tr>
                    <td>
                        <a href="#"><%=gear.name%></a>
                    </td>
                    <td>
                        $<%=gear.value%>
                    </td>
                    <td>
                        <button type="submit" value="Add to wanted">Add to wanted</button>
                    </td>
                </tr>
                <%i++;})%>
                <tr>
                    <td>
                        <strong>Total</strong>
                    </td>
                    <td>
                        $<%=total%>
                    </td>
                    <td></td>
                </tr>
            </table>
        </div>
        <div class="col-md-6 hobby-quote">
            <blockquote>
                <%=fullHobby.quote%>
                <p></p>
            </blockquote>
        </div>
    </div>
</div>
